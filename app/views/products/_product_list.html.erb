<% products.each do |product| %>
  <li class="product animate masonry-brick <%= product.department %>_items">

    <div class="flipper">

      <div class="side-a">
        <div class="like-dislike-wrapper">
          <%= link_to like_product_path(product), method: :post, remote: true, class: 'like likeicon' do %>
            &#xe000;
          <% end %>
          <a class="dislike dislikeicon" href="#">&#xe028;</a>
        </div>

        <%= image_tag product.large_image, { alt: product.title, title: product.title} %>
      </div>




      <div class="side-b">
        <p><%= product.title %></p>
      </div>
    </div>

  </li>
<% end %>
