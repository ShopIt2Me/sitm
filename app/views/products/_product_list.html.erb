<% products.each do |product| %>
  <li class="product animate masonry-brick <%= product.department %>_items">

    <div class="flipper">    

      <div class="side-a">
        <div class="like-dislike-wrapper">
          <div class="like" data-productid="<%= product.id %>">
            <a class="likeicon" href="#">&#xe000;</a>
          </div>
      
          <div class="dislike" data-productid="<%= product.id %>">
            <a class="dislikeicon" href="#">&#xe028;</a>
          </div>
        </div>

        <%= image_tag product.large_image, { alt: product.title, title: product.title} %>
      </div>

      <div class="side-b">
        <p class="title"><%= product.title_mini %></p>
        <a class="buy-button" href= "<%= product.buylink %>" target= "_blank"> BUY
          <%= image_tag("shoppingbag.svg", class: "bag", type: "image/svg+xml") %>
        </a>
        <p class="price"><%= product.price if product.price !="-"%></p>
      </div>
    </div>

  </li>
<% end %>
