@media screen and (max-width: 500px) {

  #slider{
    width: 140px;
    height: 40px;
    margin-right: 7px;
  }
  #toggleswitch{
    top: 25%;
    height: 30px;
  }
  #logo{
    display: none;
  }
  #logo_sm{
    display: inline;
  }
  .gender{
    position: relative;
    width: 21px;
  }

}
@media screen and (max-device-width: 500px) {

  #welcome-button {
    width: 60px;
    height: 60px;
    margin: auto;
    margin-bottom: 20px;
    background-image: url(<%= asset_path "gotit60.png" %>);
  }

  #welcome-button:active {
    background-position: -60px 0;
  }

  .modal h2,
  .modal h3 {
    font-size: medium;
  }

}

